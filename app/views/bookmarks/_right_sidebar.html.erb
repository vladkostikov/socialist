<div class="card mb-3 shadow-sm border" style="border-radius: 13px;">
  <div class="card-body">
    <div class="list-group">
      <%= link_to bookmarks_path,
                  class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                  data: {turbo: false} do %>
        <div class="d-flex align-items-center">
          <span class="nav-link-text">Закладки</span>
        </div>
      <% end %>

      <div class="list-group ps-3">
        <%= link_to bookmarks_path(type: 'article'),
                    class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                    data: {turbo: false} do %>
          <div class="d-flex align-items-center">
            <span class="nav-link-text">Публикации</span>
          </div>
        <% end %>

        <%= link_to bookmarks_path(type: 'user'),
                    class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                    data: {turbo: false} do %>
          <div class="d-flex align-items-center">
            <span class="nav-link-text">Люди</span>
          </div>
        <% end %>

        <%= link_to bookmarks_path(type: 'comment'),
                    class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                    data: {turbo: false} do %>
          <div class="d-flex align-items-center">
            <span class="nav-link-text">Комментарии</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
