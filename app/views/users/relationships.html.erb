<div class="row">
  <div class="col-md-8">
    <div class="card mb-3 shadow-sm border" style="border-radius: 13px;">
      <div class="card-body pb-0">
        <h5>
          <span><%= name %></span>
          <span class="text-muted ms-1"><%= @count %></span>
        </h5>
      </div>
      <%= render partial: 'users/search_result', locals: { users: @users } %>
    </div>

    <%= paginate @users %>
  </div>

  <div class="col-md-4">
    <div class="card mb-3 shadow-sm border" style="border-radius: 13px;">
      <div class="card-body">
        <div class="list-group">

          <%= link_to @user,
                      class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                      data: {turbo: false} do %>
            <div class="row">
                <div class="col-auto pe-0">
                  <%= image_tag user_avatar(@user, 100),
                                  class: 'my-auto rounded-circle border border-secondary',
                                  size: '45x45' %>
                </div>
              <div class="col-auto">
                  <span class="nav-link-text"><%= @user.full_name %></span><br>
                  <small class="text-muted">перейти к странице</small>
              </div>
              </div>
          <% end %>

          <%= link_to user_friends_path(@user),
                      class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                      data: {turbo: false} do %>
            <div class="d-flex align-items-center">
              <span class="nav-link-text">Друзья</span>
            </div>
          <% end %>

          <%= link_to user_subscriptions_path(@user),
                      class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                      data: {turbo: false} do %>
            <div class="d-flex align-items-center">
              <span class="nav-link-text">Подписки</span>
            </div>
          <% end %>

          <%= link_to user_followers_path(@user),
                      class: "list-group-item-action p-0 text-decoration-none py-1 text-dark rounded",
                      data: {turbo: false} do %>
            <div class="d-flex align-items-center">
              <span class="nav-link-text">Подписчики</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
