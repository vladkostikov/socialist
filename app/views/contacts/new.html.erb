<h1><%= t("contacts.contact_header") %></h1>

<%= form_for :contact, url: contacts_path, data: { turbo: false }  do |f| %>
  <% if @contact && @contact.errors.any? %>
    <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
