<%= form_for :article, url: article_path(@article), method: :PUT, data: { turbo: false } do |f| %>
  <div class="card mb-3 shadow-sm border" style="border-radius: 13px;">
    <div class="card-body">
      <h4>Редактирование публикации</h4>
      <form>
        <div class="mb-2 mt-2">
          <%= f.rich_text_area :content, class: 'form-control',
                                  placeholder: 'Напишите что-нибудь...' %>
        </div>

        <div class="mb-1">
          <%= f.submit 'Сохранить', class: 'btn btn-outline-primary' %>
        </div>
      </form>
    </div>
  </div>
<% end %>
