<!-- Comments section -->
<section class="mb-4">
  <div class="card bg-white shadow-sm border" style="border-radius: 13px">
    <div class="card-body">
      <%= render partial: 'articles/content', locals: { articles: [@article] } %>
    </div>
    <div class="card-body" id="comments">
      <!-- Comment form -->
      <%= render partial: 'comments/form', locals: { instance: @article } %>
      <!-- Comments -->
      <%= render partial: 'comments/show', locals: { comments: @comments} %>
    </div>
  </div>
</section>
