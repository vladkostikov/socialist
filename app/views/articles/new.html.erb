<h1>Новая публикация</h1>

<%= form_for :article, url: articles_path, data: { turbo: false }  do |f| %>
  <p>
    <%= f.label :title, 'Заголовок', class: "form-label" %>
    <%= f.text_field :title, size: '40', placeholder: 'Введите заголовок',
                     class: 'form-control' %>
  </p>
  <p>
    <%= f.label :text, 'Текст', class: "form-label" %>
    <%= f.text_area :text, size: '40x5', placeholder: 'Введите текст публикации',
                    class: 'form-control' %>
  </p>
  <p>
    <%= f.submit 'Добавить публикацию', class: 'btn btn-outline-primary' %>
  </p>
<% end %>
