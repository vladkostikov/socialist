<div class="modal position-static d-block">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow-sm">
      <div class="p-5 pb-4 border-bottom-0 text-center">
        <h1 class="fw-bold mb-0 fs-2 text-center">Регистрация</h1>
      </div>

      <div class="modal-body p-5 pt-0">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="field col-6">
              <%= f.label :first_name, 'Имя' %><br/>
              <%= f.text_field :first_name, class: 'form-control mb-2',
                               placeholder: "Иван",
                               autofocus: true,
                               required: true %>
            </div>

            <div class="field col-6">
              <%= f.label :last_name, 'Фамилия' %><br/>
              <%= f.text_field :last_name, class: 'form-control mb-2',
                               placeholder: "Иванов",
                               required: true %>
            </div>
          </div>

          <div class="field mb-3">
            <%= f.label :email, 'Почта' %><br/>
            <%= f.email_field :email, class: 'form-control mb-2',
                              placeholder: "ivan@ivanov.ru",
                              autocomplete: "email",
                              required: true  %>
          </div>

          <div class="field mb-3">
            <%= f.label :password, 'Пароль' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> символов минимум)</em>
            <% end %><br/>
            <%= f.password_field :password,
                                 class: 'form-control mb-2',
                                 autocomplete: 'new-password',
                                 placeholder: "Password",
                                 required: true %>
          </div>

          <div class="actions">
            <%= f.submit "Зарегистрироваться",class: 'w-100 mb-2 btn btn-lg rounded-3 btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

