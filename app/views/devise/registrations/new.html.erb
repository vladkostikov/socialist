<div class="modal position-static d-block">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
      <div class="p-5 pb-4 border-bottom-0 text-center">
        <h1 class="fw-bold mb-0 fs-2 text-center">Регистрация</h1>
      </div>

      <div class="modal-body p-5 pt-0">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mb-3">
            <%= f.label :email, 'Почта' %><br/>
            <%= f.email_field :email, class: 'form-control mb-2',
                              placeholder: "name@example.com",
                              autocomplete: "email",
                              autofocus: true,
                              required: true  %>
          </div>

          <div class="field mb-3">
            <%= f.label :username, 'Никнейм' %><br/>
            <%= f.text_field :username, class: 'form-control mb-2',
                             placeholder: "username",
                             required: true %>
          </div>

          <div class="field mb-3">
            <%= f.label :password, 'Пароль' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> символов минимум)</em>
            <% end %><br/>
            <%= f.password_field :password,
                                 class: 'form-control mb-2',
                                 autocomplete: 'new-password',
                                 placeholder: "Password",
                                 required: true %>
          </div>

          <div class="field mb-3">
            <%= f.label :password_confirmation, 'Подтвердите пароль' %><br/>
            <%= f.password_field :password_confirmation,
                                 class: 'form-control mb-2',
                                 autocomplete: "new-password",
                                 placeholder: "Password",
                                 required: true %>
          </div>

          <div class="actions">
            <%= f.submit "Зарегистрироваться",class: 'w-100 mb-2 btn btn-lg rounded-3 btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

