<div class="row mb-4" style="background: white">
  <div class="container">
    <div class="container px-0 py-1">
      <header class="d-flex flex-wrap align-items-center justify-content-center">
        <ul class="nav col-2">
          <a href="<%= root_path %>" class="nav-link link-dark ps-0">Главная</a>
        </ul>

        <ul class="nav me-auto">
          <li><a href="<%= users_path %>" class="nav-link px-2 ps-0 link-dark">Пользователи</a></li>
          <li><a href="<%= new_article_path %>" class="nav-link px-2 link-dark">Добавить публикацию</a></li>
        </ul>

        <div class="col-md-3 text-end">
          <% if user_signed_in? %>
            Привет, <%= current_user.username %> |
            <%= link_to 'Выйти', destroy_user_session_path,
                        data: { turbo_method: :delete,
                                turbo_confirm: 'Вы точно хотите выйти?'} %>
          <% else %>
            <a href="<%= new_user_session_path %>" type="button" class="btn btn-outline-primary me-2">Войти</a>
          <% end %>
        </div>
      </header>
    </div>
  </div>
</div>
